{% extends "layout.njk" %}
{% block content %}
<main class="container">
    <h1>{{title}}</h1>
    <form action="/calculator" method="get">
        <p>
            <input type="number" name="n1" placeholder="Number..." value="{{query}}">
        </p>
        <p>
            <select name="n3">
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">*</option>
                <option value="/">/</option>
            </select>
        </p>
        <p>
            <input type="number" name="n2" placeholder="Number..." value="{{query}}">
            <button type="submit">Calculate</button>
        </p>
    </form>
    <p>Svar: {{answer}}</p>
</main>
{% endblock %}