{% extends "layout.njk" %}
{% block content %}
<main class="container">
    <h1>{{title}}</h1>
    <form action="/search" method="get">
        <input type="text" name="q" placeholder="Search..." value="{{query}}">
        <button type="submit">Search</button>
    </form>
    <p>Du s√∂kte efter {{query}}</p>
    {% if names and query %}
    <p>Vi hittade:</p>
    <ul>
        {% for name in names %}
        <li>{{name}}</li>
        {% endfor %}
    </ul>
    {% else %}
    <p>Vi hittade inga resultat</p>
    {% endif %}
</main>
{% endblock %}